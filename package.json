{
  "name": "@ngfly/translate-db",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Angular translation library using IndexedDB for storage",
  "author": {
    "name": "Kinley Rabgay",
    "url": "https://kinleyrabgay.vercel.app/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ngfly/translate-db"
  },
  "keywords": [
    "angular",
    "translation",
    "i18n",
    "indexeddb",
    "offline",
    "localization"
  ],
  "scripts": {
    "ng": "ng",
    "build": "ng-packagr -p ng-package.json && npm run postbuild",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "postbuild": "rm -rf dist/esm2022",
    "analyze": "ng build --stats-json && webpack-bundle-analyzer dist/stats.json",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "lint": "ng lint"
  },
  "peerDependencies": {
    "@angular/core": "^17.1.0",
    "idb": "^7.0.0"
  },
  "dependencies": {
    "idb": "^8.0.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.0",
    "@angular/cli": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/compiler-cli": "^17.1.0",
    "@angular/core": "^17.1.0",
    "ng-packagr": "^17.1.0",
    "rxjs": "^7.8.2",
    "typescript": "~5.3.2"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/fesm2022/ngfly/translate-db.mjs",
  "module": "./dist/fesm2022/ngfly/translate-db.mjs",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/"
  ]
}
